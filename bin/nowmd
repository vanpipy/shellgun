#!/usr/bin/env bash

TOUCHED="$(date "+%Y-%m-%d_%H:%M:%S")"
filename="$TOUCHED.md"

echo ">> The time you touched is $(date "+%Y-%m-%d %H:%M:%S")"

if [ -f "$filename" ]; then
    echo ">> The markdown exists already."
    exit 1
fi

echo ">> Do you want to generate $TOUCHED.md?Y/n"

read willing

if [ "$willing" = "n" ]; then
    echo "Maybe tomorrow."
else    
    touch "$filename"
    echo "Touch now with a markdown successfully."
fi
