#!/usr/bin/env bash

hasVim=0

function checkVim() {
    if [ -x "$(command -v vim)" ]; then
        hasVim=1
    else
        hasVim=0
    fi
}

function installPlug() {
    echo
    echo "Download the plug.vim..."
    echo

    curl -o ~/.vim/autoload/plug.vim --create-dirs \
        https://gist.githubusercontent.com/vanpipy/5466dc623d6c9ec124f997ab7e6f2c70/raw/26229fb23962d66043af94e9c09a64ec1d934cd5/plug.vim

    echo
    echo "Done"
}

function installVimrc() {
    echo
    echo "Download the vimrc..."
    echo

    curl -o ~/.vimrc \
        https://gist.githubusercontent.com/vanpipy/0597d3ee27a55ecf8f1ad20cc044024e/raw/7d5bf82194e50de7d5bd0fcfe7c79774833e07b8/vimrc

    echo
    echo "Done"
}

function initilizePlugins() {
    echo
    echo "Plugins is initilizing"
    echo

    vi -e -u ~/.vimrc -i NONE -c "PlugInstall"

    echo "Please run the command to install the plugins of the `coc.vim`"
    echo "Under the vi editor - `CocInstall coc-tsserver coc-rome coc-eslint coc-json coc-git coc-cmake`"

    echo
    echo "Finished"
}

function install() {
    checkVim

    if [ "$hasVim" -eq 1 ]; then
        installPlug
        installVimrc
        initilizePlugins
    else
        echo
        echo "The vim cannot be found, please install it first"
        echo "Your can visit https://www.vim.org/download.php"
    fi
}

install;
